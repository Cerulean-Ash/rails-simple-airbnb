
<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <h1>All our Flats (<%= Flat.count %>)</h1>
    </div>
  </div>
  <div class="grid-container">
    <% @flats.each do |flat| %>
    <div >
      <div class="flat-card">
        <div class="flat-card-content">
          <div class="flat-card-title">
            <h4><%= flat.name %></h4>
          </div>
          <p><%= flat.address %></p>
          <div class="flex">
            <div class="flex">
              <i class="material-icons me-2">people</i>
              <span><%= flat.number_of_guests %></span>
            </div>
            <div class="flex ms-3">
              <i class="material-icons me-2">currency_pound</i>
              <span><%= flat.price_per_night %></span>
            </div>
          </div>
        </div>
        <div class="flat-card-action">
          <%= link_to 'More info', flat_path(flat) %>
          <%= link_to 'Edit', edit_flat_path(flat), class: 'ms-3 text-warning' %>
          <%= link_to 'Remove', flat_path(flat), method: :delete,
            data: { confirm: "Are you sure?" }, class: 'ms-3 text-danger' %>
        </div>
      </div>
    </div>
    <% end %>
  </div>

</div>
